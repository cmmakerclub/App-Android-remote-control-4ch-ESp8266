<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    android:orientation="horizontal"
    android:rowCount="6" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/joystickView2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="43dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="1"
        android:text="คันเร่ง "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/joystickView"
        android:layout_alignLeft="@+id/joystickView"
        android:layout_marginLeft="40dp"
        android:text="เอียงซ้าย - ขวา"
        android:columnCount="6"
    android:orientation="horizontal"
    android:rowCount="6" 
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/showData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Data out"
         android:columnCount="6"
    android:orientation="horizontal"
    android:rowCount="6" 
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.example.espdronesremote.JoystickView
        android:id="@+id/joystickView2"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_weight="0.10" />

    <com.example.espdronesremote.JoystickView
        android:id="@+id/joystickView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_weight="0.10" />

    <Button
        android:id="@+id/tYawLeft"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/tYawRight"
        android:layout_marginLeft="20dp"
        android:text="+left" />

    <Button
        android:id="@+id/tYawRight"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/joystickView2"
        android:text="+Right" />

</RelativeLayout>